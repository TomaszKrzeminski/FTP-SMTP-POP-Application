


<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="text-lg-center">Mail Operations</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <a class="btn btn-info" asp-controller="MailSender" asp-action="Settings">Settings</a>

        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-12">

            <a class="btn btn-success" asp-controller="MailSender" asp-action="SendEmail">Send Mail</a>

        </div>
    </div>
    <div class="row mt-3">
        <div class="col-lg-12">

            <a class="btn btn-danger" asp-controller="MailReceiver" asp-action="GetEmails">Get Emails</a>

        </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-12">

                <a class="btn btn-primary" asp-controller="FTPOperations" asp-action="UploadFile">Upload File To FTP</a>

            </div>
        </div>
        <div class="row mt-3">
            <div class="col-lg-12">

                <a class="btn btn-secondary" asp-controller="FTPOperations" asp-action="DownloadFile">Download File From FTP</a>

            </div>
        </div>
    
</div>
