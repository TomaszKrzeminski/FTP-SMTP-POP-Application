@model MailSender
@{
    ViewData["Title"] = "SendEmail";
}

<div class="container">
    <div class="row">
        <form asp-action="SendEmail">
            <div class="col-lg-12 form-group mt-3">
                <h1>Send Email</h1>
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.Receiver" class="text-danger"></span></div>
                <lable>Receiver</lable>
                <input asp-for="@Model.Receiver" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.MessageTitle" class="text-danger"></span></div>
                <lable>Title</lable>
                <input asp-for="@Model.MessageTitle" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.MessageText" class="text-danger"></span></div>
                <lable>Message Text</lable>
                <input asp-for="@Model.MessageText" class="form-control">
            </div>
           
            <div class="col-lg-12 form-group ">
                <button type="submit" class="btn btn-danger">Send</button>
            </div>
        </form>
    </div>
</div>

