@model SettingsData
@{
    ViewData["Title"] = "Settings";
}

<div class="container">
    <div class="row">
        <form asp-action="Settings" asp-controller="MailSender">
            <div class="col-lg-12 form-group mt-3">
                <h1>SMTP Settings</h1>
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.SMTP_Login" class="text-danger"></span></div>
                <lable>SMPT Login</lable>
                <input asp-for="@Model.SMTP_Login" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.SMTP_Password" class="text-danger"></span></div>
                <lable>Hasło</lable>
                <input asp-for="@Model.SMTP_Password" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.SMTP_Host" class="text-danger"></span></div>
                <lable>Host SMTP</lable>
                <input asp-for="@Model.SMTP_Host" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.SMTP_EmailAddress" class="text-danger"></span></div>
                <lable>Adres Email </lable>
                <input asp-for="@Model.SMTP_EmailAddress" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.SMTP_Port" class="text-danger"></span></div>
                <lable>Numer portu smtp</lable>
                <input asp-for="@Model.SMTP_Port" class="form-control">
            </div>
           

            <div class="form-check">
                <div><span asp-validation-for="@Model.SMTP_EnableSsl" class="text-danger"></span></div>
                <input type="checkbox" class="form-check-input" asp-for="@Model.SMTP_EnableSsl">
                <label class="form-check-label" for="exampleCheck1">Ssl</label>
            </div>


            <div class="col-lg-12 form-group ml-3 ">
                <h1>POP3 Settings</h1>
            </div>


            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.Pop3_Login" class="text-danger"></span></div>
                <lable>SMPT Login</lable>
                <input asp-for="@Model.Pop3_Login" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.Pop3_Password" class="text-danger"></span></div>
                <lable>Hasło</lable>
                <input asp-for="@Model.Pop3_Password" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.Pop3_Host" class="text-danger"></span></div>
                <lable>Host SMTP</lable>
                <input asp-for="@Model.Pop3_Host" class="form-control">
            </div>
            @*<div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.Pop3_EmailAddress" class="text-danger"></span></div>
                <lable>Adres Email </lable>
                <input asp-for="@Model.Pop3_EmailAddress" class="form-control">
            </div>*@
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.Pop3_Port" class="text-danger"></span></div>
                <lable>Numer portu smtp</lable>
                <input asp-for="@Model.Pop3_Port" class="form-control">
            </div>

            <div class="form-check">
                <div><span asp-validation-for="@Model.Pop3_EnableSsl" class="text-danger"></span></div>
                <input type="checkbox" class="form-check-input" asp-for="@Model.Pop3_EnableSsl">
                <label class="form-check-label" for="exampleCheck1">Ssl</label>
            </div>



            <div class="col-lg-12 form-group ml-3 ">
                <h1>FTP Settings</h1>
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.RequestUriString" class="text-danger"></span></div>
                <lable>Host SMTP</lable>
                <input asp-for="@Model.RequestUriString" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.FTP_Login" class="text-danger"></span></div>
                <lable>Adres Email </lable>
                <input asp-for="@Model.FTP_Login" class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.FTP_Password " class="text-danger"></span></div>
                <lable>Numer portu smtp</lable>
                <input asp-for="@Model.FTP_Password " class="form-control">
            </div>
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.FTP_Path" class="text-danger"></span></div>
                <lable class="form-check-label">File Path</lable>
                <input asp-for="@Model.FTP_Path" class="form-control ">
            </div>





            <div class="col-lg-12 form-group ">
             <button type="submit" class="btn btn-danger">Save</button>
            </div>


        </form>
    </div>
</div>
     
        

       

       