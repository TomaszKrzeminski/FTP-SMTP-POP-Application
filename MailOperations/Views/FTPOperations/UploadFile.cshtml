@model UploadFileToFTP



<div class="container">
    <div class="row">
        <form asp-action="UploadFile">
            <div class="col-lg-12 form-group ">
                <div><span asp-validation-for="@Model.FilePath" class="text-danger"></span></div>
                <lable>File Path</lable>
                <input asp-for="@Model.FilePath" class="form-control">
            </div>

            <div class="col-lg-12 form-group ">
                <button type="submit" class="btn btn-danger">Upload</button>
            </div>


        </form>



    </div>
</div>