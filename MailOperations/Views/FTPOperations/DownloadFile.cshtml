@model List<string>
@{
    ViewData["Title"] = "DownloadFile";
}

<div class="container">
    <div class="row">
        <form asp-action="DownloadFile" method="post">


            @if (Model.Count() > 0)
            {
                <div class="col-lg-12">
                    <h1>Select Files to Download</h1>
                </div>

                for (int i = 0; i < Model.Count(); i++)
                {

                    <div class="col-lg-12 form-group ">
                       
                        <label>@Model[i]</label>
                        <input type="hidden"  name="[@i].FileName" class="form-control" value=@Model[i]>
                       
                    </div>
                    @*<div class="col-lg-12 form-group ">                      
                                              
                        <input  name="[@i].Download" class="form-control" value="YES">
                    </div>*@
                    <div class="col-lg-12 form-group">
                        <select name="[@i].Download">
                           
                            <option value="Download">Download</option>
                            <option value="Leave">Leave</option>
                           
                        </select>
                    </div>


                }
                <div class="col-lg-12 form-group ">
                    <button type="submit" class="btn btn-danger">Download</button>
                </div>

            }
            else
            {
                <h1>No files to download</h1>
            }







        </form>










    </div>
</div>

