@model EmailViewModel
@{
    ViewData["Title"] = "ShowDetails";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <h1>Sender: @Model.From</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <h3>Message Subject: @Model.MessageSubject</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <p>@Model.Text</p>
        </div>
    </div>
</div>

